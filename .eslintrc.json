{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
    },
    "ignorePatterns": [
        "**/generated/*.ts",
        "dist/**"
    ],
    "overrides": [
        // let eslint scan *.ts
        { "files": ["*.ts", "*.js"] }
    ]
}
